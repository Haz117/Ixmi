// Estas son las reglas de Firestore recomendadas para tu proyecto
// Ve a Firebase Console > Firestore Database > Rules y pégalas

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura a usuarios autenticados
    match /seccionales/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir lectura y escritura a usuarios específicos (admin)
    match /seccionales/{document} {
      allow read, write: if request.auth != null && 
        (request.auth.token.email.matches('.*admin.*') || 
         request.auth.token.email == 'admin@ixmicheck.com');
    }
    
    // Regla más permisiva para debuggear (TEMPORAL)
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}
